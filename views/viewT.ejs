<%- include("partials/header.ejs") %>

<div class="container px-4 py-5" id="featured-3">
  <h2 class="pb-2 border-bottom">Tasks</h2>
  <div class="row g-4 row-cols-1 row-cols-lg-2">
    <div class="feature col">
      <h3 class="fs-2 text-body-emphasis">Daily Tasks</h3>
      <% if (locals.lengthD) { %>
        <ul style="list-style-type:none;">
          <% for( var index = 0; index < lengthD; index++) { %>
            <li>
              <label class="container"><%= dailyTasks[index] %>
                <input type="checkbox">
                <span class="checkmark"></span>
              </label>
            </li>
          <% } %>
        </ul>
      <% } else { %>
        <p>
          Create Task To Display  
        </p>
      <% } %>
    </div>
    <div class="feature col">
      <h3 class="fs-2 text-body-emphasis">Work Tasks</h3>
      <% if (locals.lengthW) { %>
        <ul style="list-style-type:none;">
          <% for( var index = 0; index < lengthW; index++) { %>
            <li>
              <label class="container"><%= workTasks[index] %>
                <input type="checkbox">
                <span class="checkmark"></span>
              </label>
            </li>
          <% } %>
        </ul>
      <% } else { %>
        <p>
          Create Task To Display  
        </p>
      <% } %>
      
    </div>
  </div>
</div>



